Screen:
    MDBoxLayout:
        padding:"1dp"
        adaptive_height: True
        orientation:"vertical"
        pos_hint: {"center_x": 0.56, "center_y": 0.6}
        # size_hint_y: None
        # row_default_height:40
        spacing: 24
        # cols:1
        MDLabel:
            orientation:"horizontal"
            text:"Login or Create a New Account"
            font_size: self.width/16
        MDLabel:
            text:"    Let's Have a Deal Today."
            font_size: self.width/20
        MDTextField:
            hint_text: "OTP"
            helper_text: "OTP mut be 6 digit."
            helper_text_mode: "on_focus"
            icon_left: "key"
            input_filter: 'int'
            max_value : 6
            size_hint: None, None
            width: root.width*0.8

        MDFillRoundFlatIconButton:
            icon:"login"
            text: "Proceed with OTP"
            pos_hint: {"center_x": 0.4}

